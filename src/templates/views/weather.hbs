<!DOCTYPE html>
<html lang="en">
<head>
    {{!-- cls
     --}}
   {{>header}}


   <style>
    body {
      background-image: url('../images/2nd.png');
        margin: 0;
        padding: 0;
        background-size: cover;
        background-repeat: no-repeat;
    }
  </style>

</head>
<body>
    {{>navbar}}

    <!-- main header  -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">Tuesday</p>
                            <p id="today_day">13 OCT</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get Output Here</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"> <span id="temp_real_val">0</span><span><sup>o</sup></span>C</p>
                                <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="wind">
        <p class="wind_text">Wind Details <i class="far fa-snowflake"></i></p>
        <p class="speed">Speed <span id="wind_speed"></span></p>
        <p class="degree">Deg <span id="wind_degree"></span></p>
        <p class="dust">Gust <span id="wind_dust"></span></p>
    </div>

    <!-- footer code  -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wednesday";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        days = weekday[currentTime.getDay()];
        const day = document.getElementById('day');
        day.innerText = days;
      };
      getCurrentDay();
    </script>

</body>
</html>